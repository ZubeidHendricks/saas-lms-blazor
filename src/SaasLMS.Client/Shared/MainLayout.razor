@inherits LayoutComponentBase
@inject IThemeService ThemeService

<div class="min-h-screen bg-gray-50">
    <nav class="bg-white border-b border-gray-200">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="flex h-16 justify-between">
                <div class="flex">
                    <div class="flex flex-shrink-0 items-center">
                        <img class="h-8 w-auto" src="@ThemeService.CurrentTheme.LogoUrl" alt="Company logo">
                    </div>
                    <div class="hidden sm:-my-px sm:ml-6 sm:flex sm:space-x-8">
                        <NavLink class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900" 
                                 href="" Match="NavLinkMatch.All">
                            Dashboard
                        </NavLink>
                        <NavLink class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-gray-700"
                                 href="courses">
                            Courses
                        </NavLink>
                        <AuthorizeView Roles="Instructor,TenantAdmin">
                            <NavLink class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-gray-700"
                                     href="manage/courses">
                                Manage Courses
                            </NavLink>
                        </AuthorizeView>
                    </div>
                </div>
                <div class="hidden sm:ml-6 sm:flex sm:items-center">
                    <UserMenu />
                </div>
            </div>
        </div>
    </nav>

    <div class="py-10">
        <main>
            <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
                @Body
            </div>
        </main>
    </div>
</div>